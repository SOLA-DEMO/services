<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : External connectionConfig.xml
    Created on : March 2012
    Author     : soladev
    Description:
        Contains configuration details for myBatis used by the ExternalEJB
-->
<!DOCTYPE configuration PUBLIC '-//mybatis.org//DTD Config 3.0//EN' 'http://mybatis.org/dtd/mybatis-3-config.dtd'>
<configuration>
    <typeHandlers>
        <typeHandler javaType='java.lang.Character' handler='org.sola.services.common.repository.CharTypeHandler'/>
    </typeHandlers>  
    <environments default='specificDataSource'>
        <environment id='sharedDataSource'>
            <transactionManager type='MANAGED'/>
            <dataSource type='JNDI'>
                <property name='data_source' value='jdbc/sola'/>
            </dataSource>
        </environment>
        <environment id='specificDataSource'>
            <transactionManager type='MANAGED'/>
            <dataSource type='JNDI'>
                <property name='data_source' value='jdbc/external'/>
            </dataSource>
        </environment>  
    </environments>
</configuration>

